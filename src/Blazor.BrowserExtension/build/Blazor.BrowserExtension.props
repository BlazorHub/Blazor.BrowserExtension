<!-- build/Blazor.BrowserExtension.props -->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <BrowserExtensionEnvironment Condition="'$(BrowserExtensionEnvironment)' == ''"></BrowserExtensionEnvironment>
    <BrowserExtensionAssetsPath Condition="'$(BrowserExtensionAssetsPath)' == ''">wwwroot</BrowserExtensionAssetsPath>
    <IncludeBrowserExtensionAssets Condition="'$(IncludeBrowserExtensionAssets)' == ''">true</IncludeBrowserExtensionAssets>
    <!-- Define build properties for WebExtension.Net -->
    <WebExtensionAssetsPath Condition="'$(WebExtensionAssetsPath)' == ''">$(BrowserExtensionAssetsPath)</WebExtensionAssetsPath>
    <IncludeWebExtensionAssets Condition="'$(IncludeBrowserExtensionAssets)' != 'false'">true</IncludeWebExtensionAssets>
  </PropertyGroup>

</Project>